<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gsajith.daily" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/dailyicon"
        android:logo="@drawable/dailylogo"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TitleActivity"
            android:label="Daily"
            android:screenOrientation="portrait"
            android:theme="@style/TitleTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainListActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".EditTaskDialog"
            android:label="- Add a daily task!"
            android:screenOrientation="portrait"
            android:theme="@style/Transparent"
            android:parentActivityName=".MainListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gsajith.daily.MainListActivity" />
        </activity>
    </application>

</manifest>
