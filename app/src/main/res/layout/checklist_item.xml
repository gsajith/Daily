<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<FrameLayout
    android:id="@+id/checkboxview"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@color/background">

    <View
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/checkboxborder"
        android:layout_gravity="center"/>
    <View
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/checkboxbg"
        android:layout_gravity="center"
        android:padding="3dp"/>

</FrameLayout>

    <View
        android:id="@+id/midmargin"
        android:layout_width="5dp"
        android:layout_height="50dp"
        android:background="@color/background"
        android:layout_toRightOf="@id/checkboxview"/>
    <FrameLayout
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/midmargin"
        android:background="@color/red">


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:id="@+id/editbutton"
            android:background="@drawable/edit_click_overlay"/>

        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="bottom"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="25dp"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:text="TestText"
            android:paddingRight="0dp"/>
        <LinearLayout
            android:id="@+id/days_selected"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_marginRight="25dp"
            android:paddingLeft="8dp"
            >
            <TextView
                android:id="@+id/sunday"
                android:tag="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:text="S"/>

            <TextView
                android:id="@+id/monday"
                android:tag="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:text="M"/>


            <TextView
                android:id="@+id/tuesday"
                android:tag="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:text="T"/>
            <TextView
                android:id="@+id/wednesday"
                android:tag="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:text="W"/>

            <TextView
                android:id="@+id/thursday"
                android:tag="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:text="T"/>
            <TextView
                android:id="@+id/friday"
                android:tag="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:text="F"/>
            <TextView
                android:id="@+id/saturday"
                android:tag="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingRight="5dp"
                android:text="S"/>
            </LinearLayout>


        <RelativeLayout
            android:id="@+id/drag_handle"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:paddingRight="7dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="right|center_vertical">
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:background="@color/draghandle"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="@color/draghandle"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/draghandle"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="@color/draghandle"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="@color/draghandle"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="15dp"
                android:background="@color/draghandle"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="13dp"
                android:background="@color/draghandle"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:background="@color/draghandle"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="18dp"
                android:background="@color/draghandle"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="25dp"
                android:background="@color/draghandle"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="23dp"
                android:background="@color/draghandle"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="30dp"
                android:background="@color/draghandle"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="28dp"
                android:background="@color/draghandle"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="35dp"
                android:background="@color/draghandle"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginTop="33dp"
                android:background="@color/draghandle"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </FrameLayout>
    <View
        android:id="@+id/checkedoverlay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/checkedoverlay"
        android:padding="3dp"/>


    <FrameLayout
        android:id="@+id/checked"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:rotation="45">
        <View
            android:id="@+id/checkbigshadow"
            android:layout_width="10dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:background="@color/lightblueshadow"/>
        <View
            android:id="@+id/checkbig"
            android:layout_width="6dp"
            android:layout_height="31dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"
            android:background="@color/lightblue"/>
        <View
            android:id="@+id/checksmallshadow"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="27dp"
            android:background="@color/lightblueshadow"
            android:rotation="90"/>
        <View
            android:id="@+id/checksmall"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="28dp"
            android:background="@color/lightblue"
            android:rotation="90"/>
    </FrameLayout>


    <View
        android:id="@+id/checklistright"
        android:layout_width="3dp"
        android:layout_height="50dp"
        android:layout_marginLeft="47dp"
        android:background="@color/redshadow">
    </View>

    <View
        android:id="@+id/checklistbottom"
        android:layout_width="50dp"
        android:layout_height="3dp"
        android:layout_marginTop="47dp"
        android:background="@color/redshadow">
    </View>
    <View
        android:id="@+id/mainviewbottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/checkboxview"
        android:background="@color/redshadow">
    </View>

    <View
        android:id="@+id/mainviewright"
        android:layout_width="3dp"
        android:layout_height="50dp"
        android:background="@color/redshadow"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </View>
</RelativeLayout>